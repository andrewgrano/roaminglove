extends layout

block content
  .container.post
      .postInner
          h1= post.title
          //- h1= post.categories.name
          p.date= moment(post.date).format("MMMM DD, YYYY")
          ul.categories
            - for category in post.categories
              if (category.name != "Uncategorized")
                li
                  a(href='/places/' + category.name.replace(" ","-") + '.html')= category.name
            - for tag in post.tags
                li
                  a(href='/' + tag.name.replace(" ","-") + '.html')= tag.name


          .content!= post.content
          //- img(src=post.featured_image class="img-responsive")
          //- br
          //- a.btn.btn-returnhome(href="/")< &nbsp;Return Home

        - var featimgixsrc = post.featured_image.replace("107.170.229.16/wp-content/uploads", "roaminglove.imgix.net")

        .headerContent.js--hide-on-top
            img(src="#{featimgixsrc}?w=1140&h=400&fit=crop&crop=entropy")
            h1
               - for category in post.categories
                if (category.name != "Uncategorized")
                  if( category.parent != "0")
                    span  #{category.name},
               - for category in post.categories
                if (category.name != "Uncategorized")
                  if( category.parent == "0")
                    span  #{category.name}




