block content

    .container.authorPage
            hr.bg-orange
            h1.pageHeading <span class="chevronsRight">>></span> Travel Stories by #{item.name}
            -var index = 0
            - for post in records.post
                if  (post.author.name == item.name )
                  -index++
                  if( index < 2 )
                    .authorBlock
                      .authorBlock__link!= post.author.first_name.replace(/\[a/g, "<a").replace(/\]/g,">").replace(/\[\/a/g,"</a").replace(/%5D/g,">")
                      .authorBlock__desc!= post.author.last_name
            hr.bg-orange
            .postWidget__wrapper
                - for post in records.post
                    if  (post.author.name == item.name)
                      include templates/post

block JS
    script
        :uglify-js
            $(function() {
                $(document).ready(function() {
                    var categoryName, post2;
                    categoryName = item.name;
                    $.get(config.api_url2, function(res) {
                        console.log("foo1");
                        console.log(res);
                        console.log(categoryName);
                        post2 = res.posts;
                        console.log(post2);
                        // console.log(post2[0].categories);

                        $.each(post2, function(index, element) {
                            // console.log(element.categories);
                            if (element.author.name == categoryName ) {
                                $('.postWidget__wrapper').append($(templates.post({
                                    post: post2[index]
                                })).hide().fadeIn());
                            }
                        });
                    });
                });
            });
