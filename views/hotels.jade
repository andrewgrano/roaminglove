extends layout

block meta
  title Hotels - Roaming Love
  meta(name='description', content='Read articles about hotels around the world, written by real travelers.')

  //- twitter card data
  meta(name="twitter:card" content="summary_large_image")
  meta(name="twitter:site" content="Roaming Love")
  meta(name="twitter:title" content="Hotels - Roaming Love")
  meta(name="twitter:description" content="Read articles about hotels around the world, written by real travelers.")
  meta(name="twitter:creator" content="Roaming Love")
  meta(name="twitter:image:src" content="https://roaminglove.imgix.net/2016/09/window8.jpg?blend=2693BB&bm=lighten&auto=compress,format")

  //- open graph data
  meta(property="og:title" content="Hotels - Roaming Love")
  meta(property="og:type" content="article")
  meta(property="og:url" content="http://www.roaminglove.com")
  meta(property="og:image" content="https://roaminglove.imgix.net/2016/09/window8.jpg?blend=2693BB&bm=lighten&auto=compress,format")
  meta(property="og:description" content="Read articles about hotels around the world, written by real travelers.")
  meta(property="og:site_name" content="Roaming Love")
  //- meta(property="fb:admins" content="Facebook numeric ID")

  //- schema.org markup for google+
  meta(itemprop="name" content="Hotels - Roaming Love")
  meta(itemprop="description" content="Read articles about hotels around the world, written by real travelers.")
  meta(itemprop="image" content="https://roaminglove.imgix.net/2016/09/window8.jpg?blend=2693BB&bm=lighten&auto=compress,format")


block content
    include ../includes/header-window.jade
    .container.hotels
        .headerContent
            img(src="https://roaminglove.imgix.net/2016/09/window8.jpg?blend=2693BB&bm=lighten&auto=compress,format")
            h1 Hotels
        .postWidget__wrapper
            for post in wordpress.post
                - for tag in post.tags
                    if  (tag.name == "Hotels")
                      include templates/post





