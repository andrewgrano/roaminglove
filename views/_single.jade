extends layout

block meta
  title #{post.title} - Roaming Love
  meta(name='description', content='#{post.content.substring(0,150)}')
  meta(name='author', content= "#{post.author.name}")

block content
  include ../includes/header-window.jade
  .container.post
      .postInner
          h1= post.title
          //- h1= post.categories.name
          //- p.date= moment(post.date).format("MMMM DD, YYYY")
          p.date By #{post.author.name} on #{moment(post.date).format("MMMM DD, YYYY")}
          ul.categories
            - for category in post.categories
              if (category.name != "Uncategorized")
                li
                  a(href='/places/' + category.name.replace(" ","-") + '.html')= category.name
            - for tag in post.tags
                li
                  a(href='/' + tag.name.replace(" ","-") + '.html')= tag.name


          .content!= post.content

          .authorBlock
            .authorBlock__name Contributed by #{post.author.name}
            .authorBlock__link!= post.author.first_name.replace(/\[a/g, "<a").replace(/\]/g,">").replace(/\[\/a/g,"</a").replace(/%5D/g,">")
            .authorBlock__desc!= post.author.last_name


          //- - for category in post.categories
          //-   if (category.name != "Uncategorized")
          //-     h2 More Posts About #{category.name}
          //- .postWidget__wrapper
          //-   - for item in records.post
          //-     item.title
          //- ul.foo
          //-   -for category in records.categories
          //-     li= category.name

          #disqus_thread
          script
            :uglify-js
              var postID = "#{post.ID}"
              var postURL = "https://roaminglove.com/post/" + "#{post.title}".replace(/ /g,"-").replace(/:/g,"");

              /**
              *  RECOMMENDED CONFIGURATION VARIABLES: EDIT AND UNCOMMENT THE SECTION BELOW TO INSERT DYNAMIC VALUES FROM YOUR PLATFORM OR CMS.
              *  LEARN WHY DEFINING THESE VARIABLES IS IMPORTANT: https://disqus.com/admin/universalcode/#configuration-variables*/
              var disqus_config = function () {
                this.page.url = postURL;  // Replace PAGE_URL with your page's canonical URL variable
                this.page.identifier = postID; // Replace PAGE_IDENTIFIER with your page's unique identifier variable
              };
              (function() { // DON'T EDIT BELOW THIS LINE
                var d = document, s = d.createElement('script');
                s.src = '//roaminglove.disqus.com/embed.js';
                s.setAttribute('data-timestamp', +new Date());
                (d.head || d.body).appendChild(s);
              })(); 


        - var featimgixsrc = post.featured_image.replace("http://adminroaminglove.com/wp-content/uploads", "https://roaminglove.imgix.net")

        .headerContent
            img(src="#{featimgixsrc}?w=1140&h=400&fit=crop&crop=focalpoint")
            h1
               - for category in post.categories
                if (category.name != "Uncategorized")
                  if( category.parent != "0")
                    span  #{category.name},
               - for category in post.categories
                if (category.name != "Uncategorized")
                  if( category.parent == "0")
                    span  #{category.name}




