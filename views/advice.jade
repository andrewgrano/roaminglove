extends layout

block meta
  title Advice - Roaming Love
  meta(name='description', content='Read advice articles about travel, written by real travelers.')

block content
    .container.advice
        .headerContent
            img(src="http://107.170.229.16/wp-content/uploads/2016/09/window3.jpg")
            h1 Advice
        .postWidget__wrapper
            for post in wordpress.post
                - for tag in post.tags
                    if  (tag.name == "Advice")
                      include templates/post
